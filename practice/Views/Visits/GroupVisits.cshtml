@model IEnumerable<practice.Models.Visit>

@{
    ViewBag.Title = "GroupVisits";
}

<h2>GroupVisits</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VisitStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VisitEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Driver)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiblingGroup)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VisitStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VisitEnd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Driver.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiblingGroup.Name)
        </td>
        <td>
            
            @if (User.IsInRole("Sibling"))
            {<text>       

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </text>
        }
        </td>
    </tr>
}

</table>
